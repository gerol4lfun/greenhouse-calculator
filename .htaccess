# Кеширование статических ресурсов для ускорения загрузки калькулятора
# Версия: v205

# Кеширование изображений на 1 год
<FilesMatch "\.(jpg|jpeg|png|gif|webp|ico|svg)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
    Header set Expires "Thu, 31 Dec 2027 23:59:59 GMT"
</FilesMatch>

# Кеширование видео на 1 год
<FilesMatch "\.(mp4|webm|ogg)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
    Header set Expires "Thu, 31 Dec 2027 23:59:59 GMT"
</FilesMatch>

# Кеширование CSS и JS на 1 месяц (с версионированием для обновлений)
<FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=2592000"
    Header set Expires "Thu, 31 Jan 2028 23:59:59 GMT"
</FilesMatch>

# Кеширование шрифтов на 1 год
<FilesMatch "\.(woff|woff2|ttf|eot|otf)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
    Header set Expires "Thu, 31 Dec 2027 23:59:59 GMT"
</FilesMatch>

# Включение gzip сжатия для текстовых файлов
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Отключение кеширования для HTML (чтобы всегда загружалась актуальная версия)
<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
</FilesMatch>
